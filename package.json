{
  "name": "allure_reporter_alfa",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cy": "npx cypress open",
    "allure": "npx cypress run --env allure=true -s 'cypress/integration/2-advanced-examples/assertions.spec.js' --headless",
    "integrate": "npx cypress run --env allure=true --headless",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:clear": "if exist allure-results rmdir /q /s allure-results && if exist allure-report rmdir /q /s allure-report && if exist cypress/screenshots rmdir cypress/screenshots && if exist cypress/videos rmdir /q /s cypress/videos",
    "pretest": "npm run allure:clear",
    "test": "npm run integrate || npm run aftertest",
    "aftertest": "npm run allure:report",
	"smoke:admin":"npx cypress run -s 'cypress/integration/admin/*.spec.js' --group admin  --env allure=true --headless",
	"smoke:user":"npx cypress run -s 'cypress/integration/user*/*.spec.js' --env allure=true --headless",
	"copy:conf":"COPY categories.json allure-results",
	"copy:conf:linux":"cp categories.json allure-results"
  },
  "author": "artem klimov",
  "license": "ISC",
  "dependencies": {
    "-": "^0.0.1",
    "@shelex/cypress-allure-plugin": "^2.26.5",
    "allure": "^0.0.0",
    "allure-commandline": "^2.17.2",
    "cypress": "^9.5.3"
  }
}
